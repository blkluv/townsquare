{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "types": ["node"],
    "rootDir": "./",
    "lib": [
      "es2019",
      "dom"
    ],
    "paths": {
      "lib/*": ["./src/lib/*"],
      "platform/*": ["./src/platform/*"],
      "state/*": ["./src/state/*"],
      "view/*": ["./src/view/*"],
    }
  },
  "include": [
    "src",
    "scripts",
    ".eslintrc.js",
    "index.js",
    "index.web.js",
    "webpack.config.js",
    "babel.config.js",
    "metro.config.js"
  ],
}
